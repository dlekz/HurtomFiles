        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HurtomFiles.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="475" Width="975">
    <Grid Background="Orange">
        <Grid.RowDefinitions>
            <RowDefinition Height="120" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="315"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" x:Name="HeaderGrid" />
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" x:Name="SideBar" />
        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" x:Name="MainGrid" />
    </Grid>
</Window>
