<Window x:Class="HurtomFiles.WPF.AddFavorite"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HurtomFiles.WPF"
        mc:Ignorable="d"
        Title="Додати елемент" Height="250" Width="550">
    <Grid Background="Orange">
        <TextBox x:Name="BookmarkUri" 
            VerticalAlignment="Center" HorizontalAlignment="Center"
            Width="500" Height="25" FontSize="15">
        </TextBox>
        <Button x:Name="AddBookmark" 
            VerticalAlignment="Bottom" HorizontalAlignment="Right"
            Width="100" Height="25" FontSize="15"
            Margin="25">Додати</Button>
    </Grid>
</Window>
